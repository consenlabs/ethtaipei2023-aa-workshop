{
  "name": "ethtaipei2023-aa-workshop",
  "version": "0.0.0",
  "description": "ETH Taipei 2023 account abstraction workshop project",
  "scripts": {
    "compile": "forge build --force",
    "format": "prettier --write .",
    "lint": "solhint \"contracts/**/*.sol\"",
    "test": "forge test -vvv --ffi",
    "test:VoidAccount": "npm run test -- --match-path test/VoidAccount.t.sol",
    "test:DepositAccount": "npm run test -- --match-path test/DepositAccount.t.sol",
    "test:SignatureAccount": "npm run test -- --match-path test/SignatureAccount.t.sol",
    "test:InitCode": "npm run test -- --match-path test/InitCode.t.sol",
    "test:TokenPaymaster": "npm run test -- --match-path test/TokenPaymaster.t.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consenlabs/ethtaipei2023-aa-workshop.git"
  },
  "author": "imToken Labs",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
